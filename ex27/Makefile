# **************************************************************************** #
#                                    Config                                    #
# **************************************************************************** #
SHELL = bash
# **************************************************************************** #
#                                    NAMES                                     #
# **************************************************************************** #
NAME = ft_display_file
# **************************************************************************** #
#                                    Paths                                     #
# **************************************************************************** #
SRC_PATH        = .
INC_PATH        = .

FILES           = main.c

SRC             = $(addprefix $(SRC_PATH)/, $(FILES))

# **************************************************************************** #
#                                   Compiler                                   #
# **************************************************************************** #
CC              = cc
CFLAGS          = -Wall -Wextra -Werror
INC             = -I $(INC_PATH)
# **************************************************************************** #
#                                   Commands                                   #
# **************************************************************************** #
RM              = rm -rf
# **************************************************************************** #
#                                    Rules                                     #
# **************************************************************************** #
 
all: $(NAME)

$(NAME): $(FILES)
	$(CC) $(CFLAGS) $(INC) $(FILES) -o $@

clean:

fclean: clean
	 $(RM) $(NAME)
    
re: fclean all
